@model FixMyTask_Core_Project.Models.UserInsert

@{
    ViewData["HideNavbar"] = true;
}

<section class="h-100 bg-dark">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card card-registration my-4">
                    <div class="row g-0">
                        <div class="col-xl-6 d-none d-xl-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img4.webp"
                                 alt="Sample photo" class="img-fluid"
                                 style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                        </div>
                        <div class="col-xl-6">
                            <div class="card-body p-md-5 text-black">
                                <h3 class="mb-5 text-uppercase">User Registration</h3>
                                <form asp-action="UserReg_Click" class="form-horizondal" enctype="multipart/form-data" method="post">
                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input asp-for="User_Name" type="text" id="form3Example8" class="form-control form-control-lg" placeholder="Name" />
                                        <span asp-validation-for="User_Name" class="text-danger"></span>
                                    </div>
                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input asp-for="User_Email" type="email" id="form3Example97" class="form-control form-control-lg" placeholder="Email Id" />
                                        <span asp-validation-for="User_Email" class="text-danger"></span>
                                    </div>
                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input asp-for="User_Phone" type="number" id="form3Example97" class="form-control form-control-lg" placeholder="Phone Number" />
                                        <span asp-validation-for="User_Phone" class="text-danger"></span>
                                    </div>
                                    <div data-mdb-input-init class="form-outline mb-4">
                                        @* <input type="text" id="form3Example8" class="form-control form-control-lg" placeholder="Address" /> *@
                                        <textarea asp-for="User_Address" type="text" id="form3Example8" class="form-control form-control-lg" placeholder="Address"></textarea>
                                        <span asp-validation-for="User_Address" class="text-danger"></span>
                                    </div>

                                    <div class="d-md-flex justify-content-start align-items-center mb-4 py-2">

                                        <h6 class="mb-0 me-4">Gender: </h6>

                                        <div class="form-check form-check-inline mb-0 me-4">
                                            <input asp-for="User_Gender" class="form-check-input" type="radio" name="User_Gender" value="Female" id="genderFemale" />
                                            <label class="form-check-label" for="femaleGender">Female</label>
                                        </div>

                                        <div class="form-check form-check-inline mb-0 me-4">
                                            <input asp-for="User_Gender" class="form-check-input" type="radio" name="User_Gender" value="Male" id="genderMale" />
                                            <label class="form-check-label" for="maleGender">Male</label>
                                        </div>
                                        <span asp-validation-for="User_Gender" class="text-danger"></span>

                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div data-mdb-input-init class="form-outline">
                                                <input asp-for="User_Country" type="text" id="form3Example1m" class="form-control form-control-lg" placeholder="Country" />
                                                <span asp-validation-for="User_Country" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-4">
                                            <div data-mdb-input-init class="form-outline">
                                                <input asp-for="User_State" type="text" id="form3Example1n" class="form-control form-control-lg" placeholder="State" />
                                                <span asp-validation-for="User_State" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div data-mdb-input-init class="form-outline">
                                                <input asp-for="User_City" type="text" id="form3Example1m" class="form-control form-control-lg" placeholder="City" />
                                                <span asp-validation-for="User_City" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-4">
                                            <div data-mdb-input-init class="form-outline">
                                                <input asp-for="Pincode" type="text" id="form3Example1n" class="form-control form-control-lg" placeholder="Pincode" />
                                                <span asp-validation-for="Pincode" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>


                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input asp-for="Username" type="text" id="form3Example99" class="form-control form-control-lg" placeholder="Username" />
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input asp-for="Password" type="text" id="form3Example99" class="form-control form-control-lg" placeholder="Password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input asp-for="cPassword" type="text" id="form3Example99" class="form-control form-control-lg" placeholder="Conform Password" />
                                        <span asp-validation-for="cPassword" class="text-danger"></span>
                                    </div>
                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <label class="form-label" for="form3Example99">Profile Photo</label>
                                        <input asp-for="User_Photo" name="file" type="file" class="form-control form-control-lg" required />
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 d-flex pt-3">
                                            <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-warning btn-lg ms-2">Register</button>
                                        </div>
                                        <div class="col-md-6 pt-3 mt-2">
                                            <span class="text-muted">Already have an account?</span>
                                            <a href="@Url.Action("Login_PageLoad", "Login")">Log in</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@{
    if (@TempData["usermsg"] != null)
    {
        <div class="alert alert-danger">
            @TempData["usermsg"]
        </div>
    }
    @if (!string.IsNullOrEmpty(Model?.usermsg))
    {
        <div class="alert alert-success">@Model.usermsg</div>
    }
}
