<div class="container my-5">
    <h2 class="mb-4 text-center fw-bold text-primary">Edit Your Profile</h2>

    <form asp-action="EditProfileClick" method="post" enctype="multipart/form-data" class="shadow-lg p-4 rounded bg-light">
        <input type="hidden" asp-for="WorkerId" />

        <div class="row">
            <!-- Profile Photo Section -->
            <div class="col-md-4 text-center">
                <label class="form-label fw-semibold">Profile Photo</label>
                <div class="mb-3">
                    @if (!string.IsNullOrEmpty(Model.WorkerPhoto))
                    {
                        <img src="@Model.WorkerPhoto" class="img-thumbnail mb-2" style="max-width: 100%; height: auto;" />
                    }
                    else
                    {
                        <div class="text-muted">No photo uploaded.</div>
                    }
                </div>
                <input name="file" type="file" class="form-control" />
            </div>

            <!-- Input Fields -->
            <div class="col-md-8">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Email</label>
                        <input asp-for="WorkerEmail" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Phone</label>
                        <input asp-for="WorkerPhone" class="form-control" />
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">Address</label>
                        <textarea asp-for="WorkerAddress" class="form-control" rows="2"></textarea>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Country</label>
                        <input asp-for="WorkerCountry" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">State</label>
                        <input asp-for="WorkerState" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">City</label>
                        <input asp-for="WorkerCity" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Experience (Years)</label>
                        <input asp-for="WorkerExperience" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Price (₹)</label>
                        <input asp-for="WorkerPrice" class="form-control" />
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">Description</label>
                        <textarea asp-for="WorkerDescription" class="form-control" rows="3"></textarea>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4 text-center">
            <button type="submit" class="btn btn-primary px-4 me-2">Update Profile</button>
            <a href="@Url.Action("Worker_PageLoad", "Worker")" class="btn btn-secondary px-4">Back</a>
        </div>
    </form>
</div>

<style>
    .form-control:focus {
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    }

    .btn-primary:hover {
        background-color: #0b5ed7;
    }

    .btn-secondary:hover {
        background-color: #6c757d;
    }
</style>


